<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_widget_add_sub">

    <Button
        android:id="@+id/widget_button_sub"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/bg_btn_style_white"
        android:textColor="@android:color/black"
        android:text="@string/sub_symbol"/>

    <TextView
        android:id="@+id/widget_text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="45dp"
        android:textColor="#000"
        tools:text="0"/>

    <Button
        android:id="@+id/widget_button_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/bg_btn_style_white"
        android:textColor="@android:color/black"
        android:text="@string/add_symbol"/>

</LinearLayout>